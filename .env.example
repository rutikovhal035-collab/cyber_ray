# Environment Configuration
# Copy this file to .env and update values

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# CAPEv2 Configuration
CAPE_API_URL=http://localhost:8000
CAPE_API_TOKEN=

# MongoDB Configuration
# For Local: mongodb://localhost:27017
# For Atlas (Recommended for low RAM): mongodb+srv://<username>:<password>@cluster.mongodb.net/malware_sandbox
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=malware_sandbox

# Redis Configuration
# For Local: redis://localhost:6379
# For Upstash (Recommended for low RAM): rediss://default:<password>@<endpoint>.upstash.io:6379
REDIS_URL=redis://localhost:6379

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=52428800

# YARA Rules
YARA_RULES_DIR=./yara_rules
